<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<%= link_to "new task", new_task_path %>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <h2>
      <%= link_to task.name, task_path(task)%>
    </h2>
    <p>
      <%= task.description %>
    </p>
    <%= link_to "Delete", task_path(task), method: :delete %>
  </li>
  <% end %>
</ul>
